########################################################################
## SPLASH SCREEN
########################################################################
MDScreen:
    # Set sc screen name
    name: "SplashScreen"
    # Start the progress bar animation when the screen is active
    on_enter: self.ids.progress.start()
    MDFloatLayout:
        #md_bg_color: 0.1, 0.1, 0.1, 1
        orientation: 'vertical'
            
        # Add App Image
        Image:
            source:'assets/APTLogoWhite.png'
            allow_stretch: True
            size_hint_x: 0.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}

    
        # Add progress bar
        MDProgressBar:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: 0.7
            # Set progress id
            id: progress
            # Set orientation
            orientation: "horizontal"
            # Set progress type
            type: "indeterminate"
            # Progress duration
            running_duration: 1
            # Catching duration
            catching_duration: 1

        MDLabel:
            text:'Powered By'
            font_style:'H6'
            # Horizontal text alignment
            halign: "center"
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}


        # Add App Image
        Image:
            source:'assets/BrilliantAILogoWhite.png'
            allow_stretch: True
            size_hint_x: 0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.17}
                
        




































